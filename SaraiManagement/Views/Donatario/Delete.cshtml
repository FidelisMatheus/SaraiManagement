@model SaraiManagement.Models.Donatario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align: center;">Tem certeza que deseja excluir?</h1>

<hr/>
<div class="centraliza">
    <dl class="row">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Nome)*@
            <label class="fonte">Nome: </label>
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Endereco)*@
            <label class="fonte">Endereço: </label>
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Endereco)
        </dd>

        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Telefone)*@
            <label class="fonte">Telefone: </label>
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Email)*@
            <label class="fonte">Email: </label>
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<hr />

<form class="centraliza" asp-action="Delete" >
    <input type="hidden" asp-for="DonatarioID" />
    <input type="submit" value="Excluir" class="btn btn-danger botao" />
    <a asp-action="Details" asp-route-id="@Model.DonatarioID" class="btn btn-success botao" role="button" aria-pressed="true">Voltar</a>
</form>
