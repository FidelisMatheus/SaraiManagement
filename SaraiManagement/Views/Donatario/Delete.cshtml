@model SaraiManagement.Models.Donatario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .botao {
        margin: 0 5px;
    }

    .fonte {
        font-size: 20px;
    }

    .centraliza {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

<h1 style="text-align: center;">Tem certeza que deseja excluir?</h1>
<hr/>
<div class="centraliza">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete" class="centraliza">
        <input type="hidden" asp-for="DonatarioID" />
        <input type="submit" value="Excluir" class="btn btn-danger botao" />
        <a asp-action="Details" asp-route-id="@Model.DonatarioID" class="btn btn-success botao" role="button" aria-pressed="true">Voltar</a>
    </form>
</div>
