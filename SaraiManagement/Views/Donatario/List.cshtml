@model SaraiManagement.Models.ViewModels.DonatarioListViewModel


@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

@foreach (var d in Model.Donatarios)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                <a asp-action="Details" asp-route-id="@d.DonatarioID">@d.Nome </a>

            </h4>
        </div>
        <div class="card-text p-1">@d.Endereco</div>
        <div class="card-text p-1">@d.Email</div>
        <div class="card-text p-1">@d.Telefone</div>

    </div>

}

<div page-model="@Model.PagingInfo" paging-action="List" page-classes-enabled="true" page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

