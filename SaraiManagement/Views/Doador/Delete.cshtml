@model SaraiManagement.Models.Doador

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align: center">Tem certeza que deseja excluir?</h1>
<hr />
<div style="padding: 0 0 0 35%;">
    <dl class="row">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Nome)*@
            <label class="fonte">Nome: </label>
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Cidade)*@
            <label class="fonte">Cidade: </label>

        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.regularidadeDoador)*@
            <label class="fonte">Regularidade: </label>

        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.regularidadeDoador)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.inicioDaDoacao)*@
            <label class="fonte">Início da Doação: </label>

        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.inicioDaDoacao)
        </dd>
    </dl>
</div>

<hr />
<form class="centraliza" asp-action="Delete">
    <input type="hidden" asp-for="DoadorID" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
    <a asp-action="Consultar" asp-route-id="@Model.DoadorID" class="btn btn-success" role="button" aria-pressed="true">Voltar</a>
</form>
