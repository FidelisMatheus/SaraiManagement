@model SaraiManagement.Models.Doador

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja excluir?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.regularidadeDoador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.regularidadeDoador)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.inicioDaDoacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.inicioDaDoacao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DoadorID" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Consultar" asp-route-id="@Model.DoadorID" class="btn btn-success" role="button" aria-pressed="true">Voltar</a>
    </form>
</div>
