@model IEnumerable<SaraiManagement.Models.Estoque>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Estoque</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                <form asp-controller="Estoque" asp-action="List">
                    <p>
                        <input type="text" name="SearchString" />
                        <input class="btn btn-primary" type="submit" value="Pesquisar" />
                    </p>
                </form>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.EstoqueID">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EstoqueID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
      <a class="btn btn-primary" asp-action="Create">Adicionar Novo Item</a>
</p>
