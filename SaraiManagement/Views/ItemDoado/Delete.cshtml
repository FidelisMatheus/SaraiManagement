@model SaraiManagement.Models.ItemDoado

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center;">Tem certeza que deseja excluir?</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Estoque)*@
            <label class="fonte">Item:</label>
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Estoque.Descricao)
        </dd>
        <dt class="col-sm-2">
            <label class="fonte">Quantidade:</label>
            @*@Html.DisplayNameFor(model => model.Quantidade)*@
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>

    </dl>

    <form asp-action="Delete" class="centraliza">
        <input type="hidden" asp-for="ItemDoadoID" />
        <input type="submit" value="Delete" class="btn btn-danger botao" />
        <a asp-action="List" class="btn btn-success botao" role="button" aria-pressed="true">Voltar</a>
    </form>
</div>
