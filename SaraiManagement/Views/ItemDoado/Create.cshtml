@model SaraiManagement.Models.ItemDoado





@{ ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Create</h1>

<h4>ItemDoado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="@Model.DoacaoID" class="control-label"></label>
                <select asp-for="@Model.DoacaoID">
                    <option>@((ViewBag.DoacaoID as SelectList).Count())</option>
                </select>

            </div>
            <div class="form-group">
                <label asp-for="@Model.EstoqueID" class="control-label"></label>
                <select asp-for="@Model.EstoqueID" class="form-control" asp-items="ViewBag.EstoqueID"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Quantidade" class="control-label"></label>
                <input asp-for="@Model.Quantidade" class="form-control" />
                <span asp-validation-for="@Model.Quantidade" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <input type="submit" value="Adicionar Novo Item a esta Doaçao" class="btn btn-primary" asp-route-x="Sim" /> <br /><br />
                <input type="submit" value="Vizualizar" class="btn btn-primary" asp-route-x="Vizualizar" /> <br /><br />
                <input type="submit" value="Finalizar" class="btn btn-primary" /> <br /><br />



            </div>
            


        </form>
    </div>
</div>




