@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <title>Sarai Management</title>
</head>

<body class="gradient">

    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" style="opacity: 0">Navbar</a>
        <form class="form-inline">
            @if (@HttpContextAccessor.HttpContext.Session.GetString("usuario_session") == null)
            {
              <button asp-controller="Usuario" asp-action="Login" class="btn btn-outline-success my-2 my-sm-0" role="button" aria-pressed="true">Fazer Login</button>
            }
            else{
             <button asp-controller="TelaInicial" asp-action="Index" class="btn btn-success my-2 my-sm-0" role="button" aria-pressed="true">Voltar</button> 
            }
        </form>
    </nav>

    @RenderBody()

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <footer class="textCenter">Sarai Management © 2021, Todos os Direitos Reservados.</footer>
</body>
</html>
