@model SaraiManagement.Models.Doacao

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .hidden {
        display: none
    }
</style>

<script>
    function mostra(id) {
        if (document.getElementById(id).style.display == 'block') {
            document.getElementById(id).style.display = 'none';
        }
        else {
            document.getElementById(id).style.display = 'block';
        }
    }
</script>

<h1 style="text-align: center">Doação</h1>

<hr />
<div class="container-fluid d-flex flex-wrap" style="display: flex; justify-content: center; align-items: center;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="DonatarioID" class="control-label"></label>*@
                <label class="fonte">Donatário: </label>
                <select asp-for="DonatarioID" class="form-control" asp-items="ViewBag.DonatarioID"></select>
            </div>
            <div class="form-group">
                @*<label asp-for="dataDoacao" class="control-label"></label>*@
                <label class="fonte">Data Doação: </label>

                <input asp-for="dataDoacao" class="form-control" />
                <span asp-validation-for="dataDoacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="UsuarioID" class="control-label"></label>*@
                <label class="fonte">Usuário: </label>
                <select asp-for="UsuarioID" class="form-control" asp-items="ViewBag.UsuarioID"></select>
            </div>



            <div id="test" class="hidden form-group container-fluid d-flex flex-wrap" style="display:none">
                <div>
                    @*<label asp-for="Valor" class="control-label"></label>*@
                    <label class="fonte">Valor: </label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>

                <div>
                    @*<label asp-for="CaixaID" class="control-label"></label>*@
                    <label class="fonte">Caixa: </label>
                    <select asp-for="CaixaID" class="form-control" asp-items="ViewBag.CaixaID"></select>
                </div>

                <br />
                <div>
                    <input type="submit" class="btn btn-success" value="Finalizar" />
                </div>
            </div>

            <div class="form-group container-fluid d-flex flex-wrap centraliza">
                <div>
                    <a class="btn btn-primary botao" onclick="mostra('test')">Fazer doaçao em dinheiro</a>
                </div>

                <div>
                    <input type="submit" class="btn btn-primary botao" asp-route-x="1" value="Fazer doaçao de itens" />
                </div>
            </div>

        </form>
    </div>
</div>

