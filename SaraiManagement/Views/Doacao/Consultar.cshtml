@model SaraiManagement.Models.Doacao

@{
    ViewData["Title"] = "Consultar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="text-align: center">Doação</h1>
<hr />

<div class="container-fluid d-flex flex-wrap" style="display: flex; justify-content: center; align-items: center;">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.dataDoacao)*@
            <label class="fonte">Data da Doação: </label>
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.dataDoacao)
        </dd>

        <dt class="col-sm-2 fonte">
            @*@Html.DisplayNameFor(model => model.Usuario)*@
            <label class="fonte">Usuário: </label>
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>

        <dt class="col-sm-2 fonte">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Valor)
        </dd>

        <dt class="col-sm-2 fonte">
            @Html.DisplayNameFor(model => model.Caixa)
        </dt>
        <dd class="col-sm-10 fonte">
            @Html.DisplayFor(model => model.Caixa.CaixaID)
        </dd>

        <dt class="col-sm-2 fonte">
            @*@Html.DisplayNameFor(model => model.Donatario)*@
            <label class="fonte">Donatário: </label>
        </dt>
        <dd class="col-sm-10 fonte">  
            @Html.DisplayFor(model => model.Donatario.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-controller="Estoque" class="botao">Editar</a>
    <a asp-action="Index" class="btn btn-success botao" role="button" aria-pressed="true">Voltar</a>
</div>
