@model SaraiManagement.Models.Aluno

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="DonatarioID" class="control-label"></label>
                <select asp-for="DonatarioID" class="form-control" asp-items="ViewBag.DonatarioID">
                    <option>
                        Nenhum
                    </option>
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Escola" class="control-label"></label>
                <input asp-for="Escola" class="form-control" />
                <span asp-validation-for="Escola" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <select asp-for="@Model.Ano" class="form-control" asp-items=" Html.GetEnumSelectList<SaraiManagement.Models.Enuns.Ano>()"></select>
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="NomeResponsavel" class="control-label"></label>
                <input asp-for="NomeResponsavel" class="form-control" />
                <span asp-validation-for="NomeResponsavel" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <select asp-for="@Model.Periodo" class="form-control" asp-items="Html.GetEnumSelectList<SaraiManagement.Models.Enuns.Periodo>()"></select>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-controller="TelaInicial" asp-action="Index" class="btn btn-success" role="button" aria-pressed="true">Voltar </a>
            </div>
        </form>
    </div>
</div>
