@model SaraiManagement.Models.Movimentacao

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .botao {
        margin: 0 5px;
    }

    .centraliza {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

<h1 style="text-align: center">Edição de Movimentação</h1>
<hr />
<div class="container-fluid d-flex flex-wrap" style="display: flex; justify-content: center; align-items: center;">

    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovimentacaoID" />
            <div class="form-group">
                <label asp-for="Valor" class="control-label">Valor:</label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoMovimentacao" class="control-label">Tipo da movimentação:</label>
                <select asp-for="@Model.TipoMovimentacao" class="form-control" asp-items="Html.GetEnumSelectList<SaraiManagement.Models.Enuns.tipoMovimentacao>()"></select>
                <span asp-validation-for="TipoMovimentacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataMovimentacao" class="control-label">Data da movimentação:</label>
                <input asp-for="DataMovimentacao" class="form-control" />
                <span asp-validation-for="DataMovimentacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição:</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoadorID" class="control-label">Doador:</label>
                <select asp-for="DoadorID" class="form-control" asp-items="ViewBag.DoadorID"></select>
                <span asp-validation-for="DoadorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioID" class="control-label">Usuario:</label>
                <select asp-for="UsuarioID" class="form-control" asp-items="ViewBag.UsuarioID"></select>
                <span asp-validation-for="UsuarioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaixaID" class="control-label">Caixa:</label>
                <select asp-for="CaixaID" class="form-control" asp-items="ViewBag.CaixaID"></select>
                <span asp-validation-for="CaixaID" class="text-danger"></span>
            </div>
            <div class="form-group centraliza">
                <input type="submit" value="Salvar" class="btn btn-primary botao" />
                <a asp-action="List" asp-route-id="@Model.MovimentacaoID" class="btn btn-success botao" role="button" aria-pressed="true">Voltar</a>
            </div>
        </form>
    </div>
</div>


