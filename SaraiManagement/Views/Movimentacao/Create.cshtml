@model SaraiManagement.Models.Movimentacao

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .botao {
        margin: 0 5px;
    }

    .centraliza {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

<h1 style="text-align: center">Cadastro de Movimentação</h1>
<hr />
<div class="container-fluid d-flex flex-wrap" style="display: flex; justify-content: center; align-items: center;">

    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="CaixaID" class="control-label">Caixa:</label>
                <select asp-for="CaixaID" class="form-control" asp-items="ViewBag.CaixaID"></select>
            </div>

            <div class="form-group">
                <label asp-for="Valor" class="control-label">Valor:</label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoMovimentacao" class="control-label">Tipo da movimentação:</label>
                <select asp-for="@Model.TipoMovimentacao" class="form-control" asp-items="Html.GetEnumSelectList<SaraiManagement.Models.Enuns.tipoMovimentacao>()"></select>
                <span asp-validation-for="TipoMovimentacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição:</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="UsuarioID" class="control-label">Usuario:</label>
                <select asp-for="UsuarioID" class="form-control" asp-items="ViewBag.UsuarioID"></select>
            </div>

            <div class="form-group">
                <label asp-for="DoadorID" class="control-label">Doador:</label>
                <select asp-for="DoadorID" class="form-control" asp-items="ViewBag.DoadorID">
                    <option>
                        Nenhum
                    </option>
                </select>
            </div>

            <div class="form-group centraliza">
                <input type="submit" value="Salvar" class="btn btn-primary botao" />
                <a asp-controller="TelaInicial" asp-action="Index" class="btn btn-success botao" role="button" aria-pressed="true">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
