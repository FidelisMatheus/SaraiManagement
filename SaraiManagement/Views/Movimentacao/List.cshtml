@model SaraiManagement.Models.ViewModels.MovimentacaoListViewModel

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var m in Model.Movimentacaos)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                <a asp-action="Consultar" asp-route-id="@m.MovimentacaoID">@m.Descricao </a>
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@m.Valor</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">@m.TipoMovimentacao</div>
        <div class="card-text p-1">@m.DataMovimentacao</div>
    </div>
}
<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>




